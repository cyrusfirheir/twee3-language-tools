{
	"name": "twee3-chapbook-1",
	"scopeName": "source.chapbook-1.twee3",
	"patterns": [
		{
			"include": "#json"
		},
		{
			"include": "#script"
		},
		{
			"include": "#stylesheet"
		},
		{
			"include": "#script-tag"
		},
		{
			"include": "#style-tag"
		},
		{
			"include": "#link-markup"
		},
		{
			"include": "#chapbook-1"
		},
		{
			"include": "#html"
		},
		{
			"begin": "<!--",
			"end": "-->",
			"name": "comment.block"
		}
	],
	"repository": {
		"chapbook-1": {
			"patterns": [
				{
					"include": "#cb-variable-section"
				},
				{
					"include": "#cb-script-tag"
				},
				{
					"include": "#cb-style-tag"
				},
				{
					"include": "#cb-inserts"
				},
				{
					"include": "#cb-modifiers"
				},
				{
					"match": "^--$",
					"name": "comment.block"
				}
			]
		},
		"cb-variable-section": {
			"patterns": [
				{
					"match": "^([a-zA-Z\\$\\_][a-zA-Z0-9\\$\\_]+)(?=:)",
					"captures": {
						"1": {
							"name": "entity.name.tag"
						}
					}
				},
				{
					"match": ":(.*)",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#mod-patterns"
								}
							]
						}
					}
				}
			]
		},
		"cb-script-tag": {
			"name": "source.js.twee3",
			"begin": "(?i)(\\[)(JavaScript)(\\])",
			"beginCaptures": {
				"1": {
					"name": "punctuation.separator"
				},
				"2": {
					"name": "keyword.control.flow.js"
				},
				"3": {
					"name": "punctuation.separator"
				}
			},
			"end": "(?i)(?=\\s*\\[cont(?:'d|inued?)?\\])|(?=::)",
			"patterns": [
				{
					"include": "source.js"
				}
			]
		},
		"cb-style-tag": {
			"name": "source.css.twee3",
			"begin": "(?i)(\\[)(CSS)(\\])",
			"beginCaptures": {
				"1": {
					"name": "punctuation.separator"
				},
				"2": {
					"name": "keyword.control.flow.js"
				},
				"3": {
					"name": "punctuation.separator"
				}
			},
			"end": "(?i)(?=\\s*\\[cont(?:'d|inued?)?\\])|(?=::)",
			"patterns": [
				{
					"include": "source.css"
				}
			]
		},
		"cb-modifiers": {
			"begin": "(\\[)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.separator"
				}
			},
			"end": "(\\])",
			"endCaptures": {
				"1": {
					"name": "punctuation.separator"
				}
			},
			"patterns": [
				{
					"match": "(?<=\\[)[a-zA-Z\\$\\_]*(?=\\s|\\])",
					"name": "keyword.control.flow.js"
				},
				{
					"include": "#mod-patterns"
				}
			]
		},
		"cb-inserts": {
			"match": "(\\{)(.*?)(\\})",
			"captures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"patterns": [
						{
							"match": "[a-zA-Z0-9\\$\\_]+(?=:)",
							"name": "keyword.control.flow.js"
						},
						{
							"include": "#mod-patterns"
						}
					]
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			}
		},
		"mod-patterns": {
			"patterns": [
				{
					"match": "!|%|&|\\*|\\-\\-|\\-|\\+\\+|\\+|~|===|==|=|!=|!==|<=|>=|<<=|>>=|>>>=|<>|<|>|!|&&|\\|\\||\\?\\:|\\*=|(?<!\\()/=|%=|\\+=|\\-=|&=|\\^=|\\b(in|instanceof|new|delete|typeof|void)\\b",
					"name": "keyword.operator"
				},
				{
					"match": "('.*?(?<!\\\\)')",
					"name": "string.quoted.single.html"
				},
				{
					"match": "(\".*?(?<!\\\\)\")",
					"name": "string.quoted.double.html"
				},
				{
					"match": "[+-]?(?:\\d*\\.)?\\d+[Mm]?[Ss]",
					"name": "constant.numeric.css"
				},
				{
					"match": "\\b((0(x|X)[0-9a-fA-F]+)|([0-9]+(\\.[0-9]+)?))\\b",
					"name": "constant.numeric.js"
				},
				{
					"match": "\\b(Infinity|NaN|undefined|null|true|false)\\b",
					"name": "constant.language.js"
				},
				{
					"match": "(\\.[a-zA-Z_]+)",
					"name": "entity.name.function"
				},
				{
					"match": "([\\(\\)\\{\\}\\[\\]])",
					"name": "meta.brace"
				},
				{
					"include": "#cb-variables"
				}
			]
		},
		"cb-variables": {
			"patterns": [
				{
					"match": "\\b([A-Za-z\\$\\_][A-Za-z0-9\\$\\_]+)\\b",
					"name": "entity.name.tag"
				}
			]
		},
		"json": {
			"begin": "^::\\s*StoryData.*?$",
			"end": "^(?=::)",
			"name": "source.json.twee3",
			"patterns": [
				{
					"include": "source.json"
				}
			]
		},
		"script": {
			"begin": "^::.+\\[\\s*script\\s*\\]",
			"end": "^(?=::)",
			"name": "source.js.twee3",
			"patterns": [
				{
					"include": "source.js"
				}
			]
		},
		"stylesheet": {
			"begin": "^::.+\\[\\s*stylesheet\\s*\\]",
			"end": "^(?=::)",
			"name": "source.css.twee3",
			"patterns": [
				{
					"include": "source.css"
				}
			]
		},
		"link-markup": {
			"name": "meta.markup.underline.link.twee3",
			"match": "(\\[\\[)(.*?)(\\]\\])",
			"captures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.function.twee3",
					"patterns": [
						{
							"match": "((?<!\\\\)(?:\\||\\]\\[|->|<-))",
							"captures": {
								"1": {
									"name": "punctuation.definition.tag.begin.html"
								}
							}
						}
					]
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			}
		},
		"script-tag": {
			"begin": "(?i)(<)(script)\\b(?=[^>]*(?:(?:type=('text/javascript'|\"text/javascript\")|lang=(javascript|'javascript'|\"javascript\")))?)(?![^/>]*/>\\s*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				}
			},
			"end": "(?i)(</)(script)(>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"patterns": [
				{
					"include": "#tag-internals"
				},
				{
					"name": "source.js.twee3",
					"begin": "(>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"end": "(?i)(?=</script>)",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				}
			]
		},
		"style-tag": {
			"begin": "(?i)(<)(style)\\b(?=[^>]*(?:(?:type=('text/css'|\"text/css\")|lang=(css|'css'|\"css\")))?)(?![^/>]*/>\\s*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				}
			},
			"end": "(?i)(</)(style)(>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"patterns": [
				{
					"include": "#tag-internals"
				},
				{
					"name": "source.css.twee3",
					"begin": "(>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"end": "(?i)(?=</style>)",
					"patterns": [
						{
							"include": "source.css"
						}
					]
				}
			]
		},
		"html": {
			"begin": "(?i)(</?)([a-z][a-zA-Z0-9:-]*)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.other.html"
				}
			},
			"end": "(/?>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"name": "meta.tag.other.html",
			"patterns": [
				{
					"include": "#tag-internals"
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"name": "constant.character.entity.html",
					"match": "(&)([a-zA-Z0-9]+|#[0-9]+|#x[0-9a-fA-F]+)(;)",
					"captures": {
						"1": {
							"name": "punctuation.definition.entity.html"
						},
						"3": {
							"name": "punctuation.definition.entity.html"
						}
					}
				},
				{
					"name": "invalid.illegal.bad-ampersand.html",
					"match": "&"
				}
			]
		},
		"string-double-quoted": {
			"name": "string.quoted.double.html",
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.html"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.html"
				}
			},
			"patterns": [
				{
					"include": "#entities"
				}
			]
		},
		"string-single-quoted": {
			"name": "string.quoted.single.html",
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.html"
				}
			},
			"end": "'",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.html"
				}
			},
			"patterns": [
				{
					"include": "#entities"
				}
			]
		},
		"tag-generic-attribute": {
			"name": "entity.other.attribute-name.html",
			"match": "(@?[a-zA-Z\\-:]+)"
		},
		"tag-id-attribute": {
			"name": "meta.attribute-with-value.id.html",
			"begin": "(@?id)\\b\\s*(=)",
			"end": "(?<='|\")",
			"captures": {
				"1": {
					"name": "entity.other.attribute-name.id.html"
				},
				"2": {
					"name": "punctuation.separator.key-value.html"
				}
			},
			"patterns": [
				{
					"name": "string.quoted.double.html",
					"begin": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.html"
						}
					},
					"end": "\"",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.html"
						}
					},
					"patterns": [
						{
							"include": "#entities"
						}
					]
				},
				{
					"name": "string.quoted.single.html",
					"begin": "'",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.html"
						}
					},
					"end": "'",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.html"
						}
					},
					"patterns": [
						{
							"include": "#entities"
						}
					]
				}
			]
		},
		"tag-internals": {
			"patterns": [
				{
					"include": "#tag-id-attribute"
				},
				{
					"include": "#tag-generic-attribute"
				},
				{
					"include": "#string-double-quoted"
				},
				{
					"include": "#string-single-quoted"
				}
			]
		}
	}
}