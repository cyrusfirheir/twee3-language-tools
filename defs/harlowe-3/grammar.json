{
	"name": "twee3-harlowe-3",
	"scopeName": "source.harlowe-3.twee3",
	"patterns": [
		{
			"include": "#h-passage"
		},
		{
			"match": ".*",
			"name": "comment.block"
		}
	],
	"repository": {
		"html-comments": {
			"begin": "<!--",
			"end": "-->",
			"name": "comment.block"
		},
		"harlowe-3": {
			"patterns": [
				{
					"include": "#html-comments"
				},
				{
					"include": "#h-macros"
				},
				{
					"include": "#link-markup"
				},
				{
					"include": "#h-named-hook"
				},
				{
					"include": "#h-collapsed"
				},
				{
					"include": "#h-variables"
				},
				{
					"include": "#script-tag"
				},
				{
					"include": "#style-tag"
				},
				{
					"include": "#html"
				}
			]
		},
		"in-macros": {
			"patterns": [
				{
					"include": "#h-macros"
				},
				{
					"include": "#h-macro-parens"
				},
				{
					"include": "#h-variables"
				},
				{
					"match": "([a-zA-Z\\-\\_]+):",
					"name": "keyword.control.flow.js"
				},
				{
					"include": "#h-hook"
				},
				{
					"include": "#h-properties"
				},
				{
					"include": "#operators"
				},
				{
					"include": "#types"
				},
				{
					"match": "([\\(\\)\\{\\}])",
					"name": "meta.brace"
				}
			]
		},
		"h-passage": {
			"name": "meta.harlowe3.passage.twee3",
			"begin": "^:: ",
			"beginCaptures": {
				"0": {
					"name": "punctuation.separator.twee3"
				}
			},
			"end": "^(?=:: )",
			"patterns": [
				{
					"include": "#json"
				},
				{
					"include": "#script"
				},
				{
					"include": "#stylesheet"
				},
				{
					"include": "#harlowe-3"
				}
			]
		},
		"h-macros": {
			"name": "meta.harlowe.macros.twee3",
			"begin": "(\\((?=[\\$_]?[a-zA-Z][-\\w]*:))",
			"beginCaptures": {
				"1": {
					"name": "punctuation.separator.twee3"
				}
			},
			"end": "(^(?=:: ))|(\\))",
			"endCaptures": {
				"1": {
					"name": "invalid.illegal"
				},
				"2": {
					"name": "punctuation.separator.twee3"
				}
			},
			"patterns": [
				{
					"include": "#in-macros"
				}
			]
		},
		"h-macro-parens": {
			"name": "meta.harlowe.macroparens.twee3",
			"begin": "(\\()",
			"beginCaptures": {
				"1": {
					"name": "punctuation.separator.twee3"
				}
			},
			"end": "(^(?=:: ))|(\\))",
			"endCaptures": {
				"1": {
					"name": "invalid.illegal"
				},
				"2": {
					"name": "punctuation.separator.twee3"
				}
			},
			"patterns": [
				{
					"include": "#in-macros"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"match": "\\b(alnum|alphanumeric|an?y?|array|bool(?:ean)?|changer|colou?r|const|command|dm|data|map|type|set|ds|digit|gradient|empty|even|int(?:eger)?|lambda|lowercase|macro|newline|num(?:ber)?|odd|str(?:ing)?|uppercase|whitespace|a|an|its|name|tags|is|to|into|in|when|via|making|each|and|or|not|does|contains|bind|matches|where)\\b",
					"name": "keyword.operator"
				},
				{
					"match": "%|\\*|\\-|\\+|<=|>=|<|>",
					"name": "keyword.operator"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"begin": "'",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.html"
						}
					},
					"end": "'",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.html"
						}
					},
					"patterns": [
						{
							"match": "[^']|\\\\'",
							"name": "string.quoted.single.html"
						}
					],
					"name": "string.quoted.single.html"
				},
				{
					"begin": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.html"
						}
					},
					"end": "\"",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.html"
						}
					},
					"patterns": [
						{
							"match": "[^\"]|\\\\\"",
							"name": "string.quoted.double.html"
						}
					],
					"name": "string.quoted.double.html"
				},
				{
					"match": "\\b((0(x|X)[0-9a-fA-F]+)|([0-9]+(\\.[0-9]+)?))\\b",
					"name": "constant.numeric.js"
				},
				{
					"match": "\\b(true|false)\\b",
					"name": "constant.language.js"
				}
			]
		},
		"h-collapsed": {
			"patterns": [
				{
					"name": "meta.harlowe.collapsed-unclosed.twee3",
					"begin": "(\\{=+)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.separator.twee3"
						}
					},
					"end": "^(?=::)|(?=\\])",
					"patterns": [
						{
							"include": "#harlowe-3"
						}
					]
				},
				{
					"name": "meta.harlowe.collapsed.twee3",
					"begin": "(\\{)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.separator.twee3"
						}
					},
					"end": "(^(?=:: ))|(\\})",
					"endCaptures": {
						"1": {
							"name": "invalid.illegal"
						},
						"2": {
							"name": "punctuation.separator.twee3"
						}
					},
					"patterns": [
						{
							"include": "#harlowe-3"
						}
					]
				}
			]
		},
		"h-named-hook": {
			"patterns": [
				{
					"name": "meta.harlowe.hooks-unclosed.twee3",
					"begin": "(\\|[a-zA-Z0-9]\\w*[\\>\\)])(\\[=+)",
					"beginCaptures": {
						"1": {
							"name": "entity.name.tag.hook"
						},
						"2": {
							"name": "punctuation.separator.twee3"
						}
					},
					"end": "^(?=:: )|(?=\\])",
					"endCaptures": {
						"1": {
							"name": "punctuation.separator.twee3"
						}
					},
					"patterns": [
						{
							"include": "#harlowe-3"
						}
					]
				},
				{
					"name": "meta.harlowe.hooks.twee3",
					"begin": "(\\|[a-zA-Z0-9]\\w*[\\>\\)])(\\[)",
					"beginCaptures": {
						"1": {
							"name": "entity.name.tag.hook"
						},
						"2": {
							"name": "punctuation.separator.twee3"
						}
					},
					"end": "(^(?=:: ))|(\\])",
					"endCaptures": {
						"1": {
							"name": "invalid.illegal"
						},
						"2": {
							"name": "punctuation.separator.twee3"
						}
					},
					"patterns": [
						{
							"include": "#harlowe-3"
						}
					]
				},
				{
					"include": "#h-hook"
				}
			]
		},
		"h-hook": {
			"patterns": [
				{
					"name": "meta.harlowe.hooks-unclosed.twee3",
					"begin": "\\[=+",
					"beginCaptures": {
						"0": {
							"name": "punctuation.separator.twee3"
						}
					},
					"end": "^(?=:: )|(?=\\])",
					"patterns": [
						{
							"include": "#harlowe-3"
						}
					]
				},
				{
					"name": "meta.harlowe.hooks.twee3",
					"begin": "\\[",
					"beginCaptures": {
						"0": {
							"name": "punctuation.separator.twee3"
						}
					},
					"end": "(^(?=:: ))|(\\])([\\<\\(][a-zA-Z0-9]\\w*\\|)?",
					"endCaptures": {
						"1": {
							"name": "invalid.illegal"
						},
						"2": {
							"name": "punctuation.separator.twee3"
						},
						"3": {
							"name": "entity.name.tag.hook"
						}
					},
					"patterns": [
						{
							"include": "#harlowe-3"
						}
					]
				}
			]
		},
		"h-variables": {
			"match": "([\\$_]|\\?[\\$_]?)([A-Za-z][A-Za-z0-9_]*)\\b",
			"name": "entity.name.tag"
		},
		"h-properties": {
			"match": "of|'s\\b",
			"name": "entity.name.type"
		},
		"json": {
			"begin": "(?<=^:: )\\s*StoryData.*?$",
			"end": "^(?=::)",
			"name": "source.json.twee3",
			"patterns": [
				{
					"include": "source.json"
				}
			]
		},
		"script": {
			"begin": "(?<=^:: ).+\\[\\s*script\\s*\\]",
			"end": "^(?=::)",
			"name": "source.js.twee3",
			"patterns": [
				{
					"include": "source.js"
				}
			]
		},
		"stylesheet": {
			"begin": "(?<=^:: ).+\\[\\s*stylesheet\\s*\\]",
			"end": "^(?=::)",
			"name": "source.css.twee3",
			"patterns": [
				{
					"include": "source.css"
				}
			]
		},
		"link-markup": {
			"name": "meta.markup.underline.link.twee3",
			"match": "(\\[\\[)([^\\[]*?)(\\]\\])",
			"captures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.function.twee3",
					"patterns": [
						{
							"match": "(->|<-)",
							"captures": {
								"1": {
									"name": "punctuation.definition.tag.begin.html"
								}
							}
						}
					]
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			}			
		},
		"script-tag": {
			"begin": "(?i)(<)(script)\\b(?=[^>]*(?:(?:type=('text/javascript'|\"text/javascript\")|lang=(javascript|'javascript'|\"javascript\")))?)(?![^/>]*/>\\s*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				}
			},
			"end": "(?i)(</)(script)(>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"patterns": [
				{
					"include": "#tag-internals"
				},
				{
					"name": "source.js.twee3",
					"begin": "(>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"end": "(?i)(?=</script>)",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				}
			]
		},
		"style-tag": {
			"begin": "(?i)(<)(style)\\b(?=[^>]*(?:(?:type=('text/css'|\"text/css\")|lang=(css|'css'|\"css\")))?)(?![^/>]*/>\\s*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				}
			},
			"end": "(?i)(</)(style)(>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"patterns": [
				{
					"include": "#tag-internals"
				},
				{
					"name": "source.css.twee3",
					"begin": "(>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"end": "(?i)(?=</style>)",
					"patterns": [
						{
							"include": "source.css"
						}
					]
				}
			]
		},
		"html": {
			"begin": "(?i)(</?)([a-z][a-zA-Z0-9:-]*)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.other.html"
				}
			},
			"end": "(/?>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"name": "meta.tag.other.html",
			"patterns": [
				{
					"include": "#tag-internals"
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"name": "constant.character.entity.html",
					"match": "(&)([a-zA-Z0-9]+|#[0-9]+|#x[0-9a-fA-F]+)(;)",
					"captures": {
						"1": {
							"name": "punctuation.definition.entity.html"
						},
						"3": {
							"name": "punctuation.definition.entity.html"
						}
					}
				},
				{
					"name": "invalid.illegal.bad-ampersand.html",
					"match": "&"
				}
			]
		},
		"string-double-quoted": {
			"name": "string.quoted.double.html",
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.html"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.html"
				}
			},
			"patterns": [
				{
					"include": "#entities"
				}
			]
		},
		"string-single-quoted": {
			"name": "string.quoted.single.html",
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.html"
				}
			},
			"end": "'",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.html"
				}
			},
			"patterns": [
				{
					"include": "#entities"
				}
			]
		},
		"tag-generic-attribute": {
			"name": "entity.other.attribute-name.html",
			"match": "(@?[a-zA-Z\\-:]+)"
		},
		"tag-id-attribute": {
			"name": "meta.attribute-with-value.id.html",
			"begin": "(@?id)\\b\\s*(=)",
			"end": "(?<='|\")",
			"captures": {
				"1": {
					"name": "entity.other.attribute-name.id.html"
				},
				"2": {
					"name": "punctuation.separator.key-value.html"
				}
			},
			"patterns": [
				{
					"name": "string.quoted.double.html",
					"begin": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.html"
						}
					},
					"end": "\"",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.html"
						}
					},
					"patterns": [
						{
							"include": "#entities"
						}
					]
				},
				{
					"name": "string.quoted.single.html",
					"begin": "'",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.html"
						}
					},
					"end": "'",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.html"
						}
					},
					"patterns": [
						{
							"include": "#entities"
						}
					]
				}
			]
		},
		"tag-internals": {
			"patterns": [
				{
					"include": "#tag-id-attribute"
				},
				{
					"include": "#tag-generic-attribute"
				},
				{
					"include": "#string-double-quoted"
				},
				{
					"include": "#string-single-quoted"
				}
			]
		}
	}
}