{
	"name": "twee3-sugarcube-2",
	"scopeName": "source.sugarcube-2.twee3",
	"patterns": [
		{
			"include": "#sugarcube-2"
		},
		{
			"include": "#json"
		},
		{
			"include": "#script"
		},
		{
			"include": "#stylesheet"
		},
		{
			"include": "#link-markup"
		},
		{
			"include": "#script-tag"
		},
		{
			"include": "#style-tag"
		},
		{
			"include": "#html"
		},
		{
			"begin": "<!--",
			"end": "-->",
			"name": "comment.block"
		}
	],
	"repository": {
		"sugarcube-2": {
			"patterns": [
				{
					"include": "#sc-verbatim"
				},
				{
					"include": "#sc-code"
				},
				{
					"include": "#sc-nowiki"
				},
				{
					"include": "#sc-comments"
				},
				{
					"include": "#sc-comments-tiddly"
				},
				{
					"include": "#sc-script-tag"
				},
				{
					"include": "#sc-macro-link-markup"
				},
				{
					"include": "#sc-macro"
				},
				{
					"include": "#sc-variables"
				},
				{
					"include": "#sc-templates"
				}
			]
		},
		"sc-verbatim": {
			"begin": "\"{3}",
			"end": "\"{3}"
		},
		"sc-nowiki": {
			"begin": "(?i)(?<=<nowiki>)",
			"end": "(?i)(?=</nowiki>)"
		},
		"sc-code": {
			"begin": "\\{{3}",
			"end": "\\}{3}"
		},
		"sc-comments": {
			"begin": "(?<!\\/)\\/\\*",
			"end": "\\*\\/",
			"name": "comment.block"
		},
		"sc-comments-tiddly": {
			"begin": "(?<!\\/)\\/%",
			"end": "%\\/",
			"name": "comment.block"
		},
		"sc-script-tag": {
			"begin": "(<<)(script)(?=>>)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "keyword.control.flow.js"
				}
			},
			"end": "(<</)(script)(>>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "keyword.control.flow.js"
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"patterns": [
				{
					"include": "#tag-internals"
				},
				{
					"name": "source.js.twee3",
					"begin": "(>>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"end": "(?=<</script>>)",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				}
			]
		},
		"sc-macro-link-markup": {
			"begin": "(?i)(<</?)((?:\\=|\\-)|(?:[a-zA-Z][a-zA-Z0-9\\-_]*))(?=(\\s+\\[(?:img)?\\[)(.*?)(\\]\\]))",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "keyword.control.flow.js"
				}
			},
			"end": "(/?>>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"patterns": [
				{
					"include": "#link-markup"
				},
				{
					"include": "#sc-variables"
				},
				{
					"include": "#sc-syntactic-sugar"
				}
			]
		},
		"sc-macro": {
			"begin": "(?i)(<</?)((?:\\=|\\-)|(?:[a-zA-Z][a-zA-Z0-9\\-_]*))(?!(\\s+\\[(?:img)?\\[)(.*?)(\\]\\]))",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "keyword.control.flow.js"
				}
			},
			"end": "(/?>>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"patterns": [
				{
					"include": "#link-markup"
				},
				{
					"include": "#sc-variables"
				},
				{
					"include": "#sc-syntactic-sugar"
				},
				{
					"name": "source.js.twee3",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				}
			]
		},
		"sc-variables": {
			"match": "(?:(\\$|_)(?:[A-Za-z_\\$][A-Za-z0-9_\\$]*))((?:\\.[A-Za-z_\\$][A-Za-z0-9_\\$]*)*)\\b",
			"name": "entity.name.tag",
			"captures": {
				"1": {
					"name": "punctuation.accessor"
				},
				"2": {
					"patterns": [
						{
							"match": "\\.",
							"name": "punctuation.accessor"
						}
					]
				}
			}
		},
		"sc-templates": {
			"match": "(\\?)([A-Za-z][A-Za-z0-9_\\-]*)\\b",
			"name": "entity.name.tag",
			"captures": {
				"1": {
					"name": "punctuation.accessor"
				}
			}
		},
		"sc-syntactic-sugar": {
			"match": "\\b(to|is|isnot|eq|neq|gt|gte|lt|lte|and|or|not|def|ndef|class)\\b",
			"name": "keyword.operator"
		},
		"json": {
			"begin": "^::\\s*StoryData.*?$",
			"end": "^(?=::)",
			"name": "source.json.twee3",
			"patterns": [
				{
					"include": "source.json"
				}
			]
		},
		"script": {
			"begin": "^::.+\\[\\s*script\\s*\\]",
			"end": "^(?=::)",
			"name": "source.js.twee3",
			"patterns": [
				{
					"include": "source.js"
				}
			]
		},
		"stylesheet": {
			"begin": "^::.+\\[\\s*stylesheet\\s*\\]",
			"end": "^(?=::)",
			"name": "source.css.twee3",
			"patterns": [
				{
					"include": "source.css"
				}
			]
		},
		"link-markup": {
			"name": "meta.markup.underline.link.twee3",
			"match": "(?i)\\s*(\\[(?:img)?\\[)(.*?)(\\]\\])\\s*",
			"captures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.function.twee3",
					"patterns": [
						{
							"match": "((?<!\\\\)(?:\\||\\]\\[|->|<-))",
							"captures": {
								"1": {
									"name": "punctuation.definition.tag.begin.html"
								}
							}
						}
					]
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			}
		},
		"script-tag": {
			"begin": "(?i)(<)(script)\\b(?=[^>]*(?:(?:type=('text/javascript'|\"text/javascript\")|lang=(javascript|'javascript'|\"javascript\")))?)(?![^/>]*/>\\s*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				}
			},
			"end": "(?i)(</)(script)(>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"patterns": [
				{
					"include": "#tag-internals"
				},
				{
					"name": "source.js.twee3",
					"begin": "(>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"end": "(?i)(?=</script>)",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				}
			]
		},
		"style-tag": {
			"begin": "(?i)(<)(style)\\b(?=[^>]*(?:(?:type=('text/css'|\"text/css\")|lang=(css|'css'|\"css\")))?)(?![^/>]*/>\\s*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				}
			},
			"end": "(?i)(</)(style)(>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.html"
				},
				"3": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"patterns": [
				{
					"include": "#tag-internals"
				},
				{
					"name": "source.css.twee3",
					"begin": "(>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"end": "(?i)(?=</style>)",
					"patterns": [
						{
							"include": "source.css"
						}
					]
				}
			]
		},
		"html": {
			"begin": "(?i)(</?)([a-z][a-z0-9:-]*)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.html"
				},
				"2": {
					"name": "entity.name.tag.other.html"
				}
			},
			"end": "(/?>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"name": "meta.tag.other.html",
			"patterns": [
				{
					"include": "#tag-internals"
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"name": "constant.character.entity.html",
					"match": "(&)([a-zA-Z0-9]+|#[0-9]+|#x[0-9a-fA-F]+)(;)",
					"captures": {
						"1": {
							"name": "punctuation.definition.entity.html"
						},
						"3": {
							"name": "punctuation.definition.entity.html"
						}
					}
				},
				{
					"name": "invalid.illegal.bad-ampersand.html",
					"match": "&"
				}
			]
		},
		"string-double-quoted": {
			"name": "string.quoted.double.html",
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.html"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.html"
				}
			},
			"patterns": [
				{
					"include": "#entities"
				}
			]
		},
		"string-single-quoted": {
			"name": "string.quoted.single.html",
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.html"
				}
			},
			"end": "'",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.html"
				}
			},
			"patterns": [
				{
					"include": "#entities"
				}
			]
		},
		"tag-generic-attribute": {
			"name": "entity.other.attribute-name.html",
			"match": "(@?[a-zA-Z\\-:]+)"
		},
		"tag-id-attribute": {
			"name": "meta.attribute-with-value.id.html",
			"begin": "(@?id)\\b\\s*(=)",
			"end": "(?<='|\")",
			"captures": {
				"1": {
					"name": "entity.other.attribute-name.id.html"
				},
				"2": {
					"name": "punctuation.separator.key-value.html"
				}
			},
			"patterns": [
				{
					"name": "string.quoted.double.html",
					"begin": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.html"
						}
					},
					"end": "\"",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.html"
						}
					},
					"patterns": [
						{
							"include": "#entities"
						}
					]
				},
				{
					"name": "string.quoted.single.html",
					"begin": "'",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.html"
						}
					},
					"end": "'",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.html"
						}
					},
					"patterns": [
						{
							"include": "#entities"
						}
					]
				}
			]
		},
		"tag-internals": {
			"patterns": [
				{
					"include": "#tag-id-attribute"
				},
				{
					"include": "#tag-generic-attribute"
				},
				{
					"include": "#string-double-quoted"
				},
				{
					"include": "#string-single-quoted"
				}
			]
		}
	}
}